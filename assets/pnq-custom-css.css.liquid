
@media screen and (max-width: 991px){
    .w-nav-overlay{
        pointer-events: none !important;
    }
}

.product-hover-pineapple .image-product {
    opacity: 100%;
    transition: all .5s;
}

.product-hover-pineapple .image-pineapple-outline {
    opacity: 0%;
    transition: all .5s;
}

.product-hover-pineapple .box-product-text {
    opacity: 0%;
    transition: all .5s;
}

.product-hover-pineapple:hover .image-product {
    opacity: 12%;
}

.product-hover-pineapple:hover .image-pineapple-outline {
    opacity: 100%;
}

.product-hover-pineapple:hover .box-product-text {
    opacity: 100%;
}

.section-testimonials {
    min-height: 100vh;
    height: auto;
}

.section-testimonials .wrap-testimonials .shopify-app-block {
    width: 100%
}

.section-app .wrap-app h2 {
    margin-bottom: 50px;
}

.w-pagination-previous,
.w-pagination-next {
    text-decoration: none;
}

a[aria-label*="Apple Pay"] {
    display: none;
}

/* Store Locator page and app styles*/
.section-store-locator {
  background-color:transparent;
}

.section-store-locator h1 {
    margin-bottom: 30px;
}

.section-store-locator #scasl-app-container {
    width: 100%;
}

.section-store-locator #scasl-app-container label {
    color: #713a9c;
}


.section-store-locator #scasl-app-container .bh-sl-filters-container ul#scasl-tag-list-container li label {
    position: relative;
    padding-left: 25px;
    color: #1e1e1e;
}

.section-store-locator #scasl-app-container .bh-sl-filters-container ul#scasl-tag-list-container li label input[type="checkbox"] {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    margin: auto;
}

.section-store-locator #scasl-app-container #bh-sl-map-container .scasl-location-list ul li .list-details .list-content .scasl-field:first-child {
    color: #713a9c;
}

.commerce-add-to-cart-button{
  justify-content: center;
  text-align: center;
}
/* Instagram Feed CSS */

@media screen and (max-width: 767px){
  .ts_sp_post_container.theme4{
    height: auto !important;
    justify-content: center;
  }
  .ts_sp_post_container.theme4 > *{
      width: 33%;
      max-width: 33%;
      flex: 0 0 33%;
      top: 0 !important;
      position: static !important;
      height: 33vw !important;
  }
}
@media only screen and (max-width: 479px) {
  .hamburger-menu-hm3 {
      z-index: 1000;
  }
  .animate-circle-grow.kick-back,
  .animate-circle-grow.tik-tok{
    bottom: 0%;
  }
}

