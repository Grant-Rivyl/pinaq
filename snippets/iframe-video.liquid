{%- liquid

    if video.type == "youtube"
        assign video_src = "https://www.youtube.com/embed/" | append: video.id
    else 
        assign video_src = "//player.vimeo.com/video/" | append: video.id
    endif
-%}
<iframe class="embedly-embed" src="{{ video_src }}" width="940" height="528" scrolling="no" frameborder="0" allow="autoplay; fullscreen" allowfullscreen="true"></iframe>